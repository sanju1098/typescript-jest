{
	"compilerOptions": {
		"target": "es2016",
		"jsx": "react",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".", // This should point to the root of your source directory
		"paths": {
			"@src/*": ["src/*"]
			// "@pages/*": ["src/pages/*"],
			// "@components/*": ["src/components/*"]
		}
	},
	"include": ["src/**/*"], // include for compilation (files within the src directory and its subdirectories for compilation.).
	"exclude": ["node_modules"] // exclude for compilation
}
